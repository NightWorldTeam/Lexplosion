<Window
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Windows.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SplashWindow"
    Width="300"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Padding="16"
        Background="#0E1422"
        CornerRadius="5">
        <Grid>
            <controls:LoadingBoard
                x:Name="LoadingBoard"
                Margin="0,80,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderBrush="#167FFC"
                BorderColor="#167FFC"
                Foreground="White"
                IsActive="True"
                RectangeColor="#167FFC" />

            <StackPanel
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <TextBlock
                    FontSize="12"
                    FontWeight="Medium"
                    Foreground="LightGray"
                    Text="Powered by " />

                <TextBlock
                    Margin="0,2,0,0"
                    VerticalAlignment="Center"
                    FontFamily="pack://application:,,,/assets/fonts/#Casper Bold"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="Gray"
                    Text="NightWorld" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
