<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="{DynamicResource PrimarySolidColorBrush}">
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.7*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Logo  -->
            <Grid>
                <Border
                    Width="250"
                    Height="250"
                    Background="#10151C"
                    CornerRadius="250" />

                <Viewbox
                    Width="250"
                    Height="250"
                    Stretch="Fill">
                    <Path
                        extensions:PathExtensions.StringData="{StaticResource PDNightworld}"
                        Fill="#A0C4FF"
                        Stretch="Fill"
                        Stroke="#1A2135">
                        <Path.OpacityMask>
                            <LinearGradientBrush Opacity="0.6" StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Offset="0" Color="#A0C4FF" />
                                <GradientStop Offset="1" Color="#A0C4FF" />
                            </LinearGradientBrush>
                        </Path.OpacityMask>
                    </Path>
                </Viewbox>

                <Border
                    Width="250"
                    Height="250"
                    Background="Transparent"
                    BorderBrush="#192332"
                    BorderThickness="15"
                    CornerRadius="250" />
            </Grid>


            <!--  Text  -->
            <Grid
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    FontSize="24"
                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                    Text="Welcome, to the NightWorld" />

                <TextBlock
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="{DynamicResource ActivitySolidColorBrush}"
                    Text="Have a nice game" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
