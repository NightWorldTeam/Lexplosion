<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.InstanceProfile.InstanceProfileAboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:instanceprofile="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.ViewModels.MainContent.InstanceProfile"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.InstanceProfile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=instanceprofile:InstanceProfileAboutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <ScrollViewer
            x:Name="Scroll"
            CanContentScroll="False"
            Focusable="False"
            ScrollViewer.VerticalScrollBarVisibility="Visible">
            <Grid Margin="32,16,32,16">
                <!--  Game Settings  -->
                <StackPanel>

                    <!--  Logo  -->
                    <Border
                        Padding="0,0,0,8"
                        BorderBrush="{DynamicResource PageItemSeparatorSolidColorBrush}"
                        BorderThickness="0,0,0,2">

                        <Grid ShowGridLines="False">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header  -->
                            <Grid Margin="0,0,0,8" ShowGridLines="False">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.4*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                        Text="{DynamicResource Image}" />
                                    <TextBlock
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                                        Text="{DynamicResource ImageDescription}" />
                                </StackPanel>

                                <controls:AdvancedButton
                                    Grid.Column="1"
                                    Command="{Binding SetLogoPathCommand}"
                                    Content="{DynamicResource LoadYourLogo}"
                                    FontSize="14"
                                    Style="{StaticResource sm-default}" />
                            </Grid>

                            <!--  Previews  -->
                            <Grid Grid.Row="1" ShowGridLines="False">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    Width="120"
                                    Height="120"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding Model.LogoBytes}" />
                                    </Border.Background>
                                </Border>

                                <Border
                                    Grid.Column="1"
                                    Width="90"
                                    Height="90"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding Model.LogoBytes}" />
                                    </Border.Background>
                                </Border>

                                <Border
                                    Grid.Column="2"
                                    Width="60"
                                    Height="60"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="2">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding Model.LogoBytes}" />
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>

                    <!--  Name  -->
                    <Border
                        Padding="0,16,0,8"
                        BorderBrush="{DynamicResource PageItemSeparatorSolidColorBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid ShowGridLines="False">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Header  -->
                            <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                    Text="{DynamicResource Name}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                                    Text="{DynamicResource InstanceNameDescription}" />
                            </StackPanel>

                            <!--  Content  -->
                            <controls:AdvancedTextBox
                                Grid.Column="1"
                                Height="32"
                                Margin="16,0,0,0"
                                HorizontalAlignment="Stretch"
                                Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>

                    <!--  Summary  -->
                    <Border
                        Padding="0,16,0,8"
                        BorderBrush="{DynamicResource PageItemSeparatorSolidColorBrush}"
                        BorderThickness="0,0,0,1">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header  -->
                            <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                    Text="{DynamicResource Summary}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                                    Text="{DynamicResource SummaryDescription}" />
                            </StackPanel>

                            <!--  Content  -->
                            <controls:AdvancedTextBox
                                Grid.Row="1"
                                MinHeight="32"
                                Margin="0,8,0,0"
                                AcceptsReturn="True"
                                Text="{Binding Model.Summary, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Border>

                    <!--  Description  -->
                    <Border
                        Padding="0,16,0,8"
                        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                        BorderThickness="0,0,0,0">

                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Model.HasChanges}" Value="True">
                                        <Setter Property="Margin" Value="0,0,0,48" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Header  -->
                            <StackPanel>
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                    Text="{DynamicResource Description}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                                    Text="{DynamicResource DescriptionAdditional}" />
                            </StackPanel>

                            <!--  Content  -->
                            <controls:AdvancedTextBox
                                x:Name="DescriptionField"
                                Grid.Row="1"
                                Height="128"
                                Margin="0,8,0,0"
                                AcceptsReturn="True"
                                IsMultiLine="True"
                                Text="{Binding Model.Description, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!--  TODO: Возможно эту панель плохо видно на темной теме, подумать над этим.  -->
        <Border
            x:Name="ChangesAlertBorder"
            Height="48"
            Margin="32,-48"
            Padding="16,5"
            VerticalAlignment="Bottom"
            Background="{DynamicResource ConfirmAlertSolidColorBrush}"
            BorderBrush="{DynamicResource ConfirmAlertBorderSolidColorBrush}"
            BorderThickness="1"
            CornerRadius="10">

            <Border.Style>
                <Style TargetType="{x:Type Border}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Model.HasChanges}" Value="True">

                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="Margin"
                                            From="32,-48"
                                            To="32,16"
                                            Duration="0:0:0.20" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="Margin"
                                            From="32,16"
                                            To="32,-48"
                                            Duration="0:0:0.10" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>

                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  TODO : Translate  -->
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Medium"
                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                    Text="{DynamicResource UnsavedChangesWarningText}" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">

                    <Button
                        Padding="8,8"
                        Command="{Binding RebootChangesCommand}"
                        Content="{DynamicResource Reset}"
                        FontWeight="Medium"
                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                        Style="{StaticResource TextButton}" />

                    <!--  Save Button  -->
                    <controls:AdvancedButton
                        Height="32"
                        Margin="8,0,0,0"
                        Padding="16,8"
                        Command="{Binding SaveChangesCommand}"
                        Content="{DynamicResource SaveChanges}"
                        FontSize="12"
                        Style="{StaticResource sm-default}" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
