<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.InstanceProfile.InstanceProfileLeftPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:core="clr-namespace:Lexplosion.WPF.NewInterface.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:instanceprofile="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.ViewModels.MainContent.InstanceProfile"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.InstanceProfile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:objects="clr-namespace:Lexplosion.WPF.NewInterface.Core.Objects"
    d:DataContext="{d:DesignInstance Type=instanceprofile:InstanceProfileLeftPanelViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="EveryPair" TargetType="{x:Type FrameworkElement}">
            <Setter Property="Margin" Value="0,0,0,32" />
        </Style>

        <extensions:NthChildStyleSelector
            x:Key="nthchild2n"
            Expression="1n"
            Style="{StaticResource EveryPair}" />


        <DataTemplate DataType="{x:Type core:LeftPanelFieldInfo}">
            <core:If Condition="{Binding IsLoading}">
                <core:If.True>
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                            <Run extensions:TextBlockExtensions.RunByKey="{Binding Name, Mode=OneWay}" />
                        </TextBlock>

                        <controls:CircleLoader
                            Grid.Column="1"
                            Width="12"
                            Height="12"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            CornerRadius="5"
                            Foreground="{DynamicResource ActivitySolidColorBrush}"
                            IsActive="{Binding IsLoading}" />
                    </Grid>
                </core:If.True>
                <core:If.False>
                    <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                        TextWrapping="WrapWithOverflow">
                        <!--  TODO: Language Key Here  -->
                        <Run extensions:TextBlockExtensions.RunByKey="{Binding Name, Mode=OneWay}" />
                        <Run Foreground="{DynamicResource ActivitySolidColorBrush}" Text="{Binding Value, Mode=OneWay}" />
                    </TextBlock>
                </core:If.False>
            </core:If>

        </DataTemplate>


        <DataTemplate DataType="{x:Type objects:FrameworkElementModel}">
            <Button Command="{Binding ExecuteAction}">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border
                            x:Name="Body"
                            Padding="8,8,16,8"
                            CornerRadius="5">
                            <Grid
                                VerticalAlignment="Center"
                                Background="Transparent"
                                Grid.IsSharedSizeScope="True"
                                ShowGridLines="False">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="Icon" />
                                    <ColumnDefinition Width="*" SharedSizeGroup="Text" />
                                </Grid.ColumnDefinitions>

                                <Viewbox
                                    Width="{Binding Width}"
                                    Height="{Binding Height}"
                                    VerticalAlignment="Center">
                                    <Path
                                        x:Name="Icon"
                                        HorizontalAlignment="Center"
                                        extensions:PathExtensions.StringKeyData="{Binding IconKey}"
                                        Fill="{DynamicResource SecondaryForegroundSolidColorBrush}"
                                        Stretch="Fill" />
                                </Viewbox>

                                <TextBlock
                                    x:Name="Text"
                                    Grid.Column="1"
                                    Margin="16,0,0,0"
                                    VerticalAlignment="Center"
                                    extensions:TextBlockExtensions.TextByKey="{Binding TextKey}"
                                    FontSize="13"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" />
                            </Grid>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Text" Property="TextBlock.Foreground" Value="{DynamicResource ActivitySolidColorBrush}" />
                                <Setter TargetName="Body" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Opacity="0.1" Color="{DynamicResource ActivityColor}" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Icon" Property="Fill" Value="{DynamicResource ActivitySolidColorBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DataTemplate>

        <DataTemplate DataType="{x:Type objects:LeftPanelMenuItem}">
            <Border>
                <controls:DefaultMainMenuTabItem
                    IconHeight="{Binding IconHeight}"
                    IconKey="{Binding Icon}"
                    IconWidth="{Binding IconWidth}"
                    IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    TextKey="{Binding TextKey}" />
                <Border.Style>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Style.Triggers>
                            <!--  nth-child with alternative index  -->
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ContentPresenter}}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                                <Setter Property="Padding" Value="0,0,0,8" />
                                <Setter Property="Margin" Value="0,0,0,8" />
                                <Setter Property="BorderBrush" Value="{DynamicResource LeftPanelItemsSeparateSolidColorBrush}" />
                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>

        <ControlTemplate x:Key="DropDownButton" TargetType="{x:Type controls:AdvancedButton}">
            <Border
                x:Name="border"
                Margin="1"
                Padding="5,2,5,2"
                Background="Transparent"
                CornerRadius="5">

                <Grid Margin="5,3,5,3" ShowGridLines="False">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border
                        Padding="2"
                        Background="Transparent"
                        CornerRadius="5">
                        <Viewbox Width="20" Height="20">
                            <Path
                                x:Name="Path"
                                HorizontalAlignment="Center"
                                extensions:PathExtensions.StringData="{TemplateBinding IconData}"
                                Fill="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                Stretch="Fill" />
                        </Viewbox>
                    </Border>

                    <TextBlock
                        x:Name="TextBlock"
                        Grid.Column="1"
                        Margin="7,0,5,0"
                        FontSize="12pt"
                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                        Text="{TemplateBinding Text}"
                        TextAlignment="Justify" />
                </Grid>
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Opacity="0.1" Color="{DynamicResource ActivityColor}" />
                        </Setter.Value>
                    </Setter>
                    <Setter TargetName="TextBlock" Property="TextElement.Foreground" Value="{DynamicResource ActivitySolidColorBrush}" />

                    <Setter TargetName="Path" Property="Fill" Value="{DynamicResource ActivitySolidColorBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid>
        <Border
            Background="{DynamicResource LeftPanelSolidColorBrush}"
            BorderBrush="{DynamicResource LeftPanelOutsideBorderSolidColorBrush}"
            BorderThickness="0,0,2,0">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Back Button  -->
                <Grid Margin="16,48,16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Command="{Binding BackCommand}"
                        Content="{DynamicResource Back}"
                        IsCancel="True"
                        Style="{DynamicResource GhostButton}" />
                </Grid>

                <!--  Header  -->
                <Grid
                    x:Name="Header"
                    Grid.Row="1"
                    Margin="16,16,0,0"
                    HorizontalAlignment="Stretch">
                    <Grid ShowGridLines="False">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Avatar  -->
                        <Border
                            Padding="12,0,0,0"
                            BorderBrush="{DynamicResource ActivitySolidColorBrush}"
                            BorderThickness="4,0,0,0"
                            CornerRadius="2,0,0,2">

                            <StackPanel>
                                <StackPanel Orientation="Horizontal">

                                    <Border
                                        Width="54"
                                        Height="54"
                                        Background="{Binding InstanceImage, Mode=OneWay}"
                                        CornerRadius="5" />

                                    <ItemsControl Margin="8,0,0,0" ItemsSource="{Binding AdditionalInfo}" />
                                </StackPanel>

                                <Grid
                                    Grid.Row="2"
                                    Margin="0,8,32,8"
                                    HorizontalAlignment="Stretch">

                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                        Text="{Binding InstanceModel.Name}"
                                        TextAlignment="Left"
                                        TextWrapping="WrapWithOverflow" />
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Grid
                            Grid.Row="2"
                            Margin="16,16,16,0"
                            VerticalAlignment="Center">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <core:If Condition="{Binding InstanceModel.IsInstalled, UpdateSourceTrigger=PropertyChanged}">
                                <core:If.True>
                                    <Grid>

                                        <Grid x:Name="PlayButtonContainer">

                                            <Grid.Style>
                                                <Style TargetType="{x:Type Grid}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding InstanceModel.IsLaunched}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding InstanceModel.IsLaunching}" Value="true">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>

                                            <controls:AdvancedButton
                                                x:Name="PlayButton"
                                                Command="{Binding PlayCommand}"
                                                FontSize="12"
                                                IconData="{StaticResource PDPlay}"
                                                IsLoading="{Binding InstanceModel.IsLaunching}"
                                                LoadingText="{DynamicResource GameLaunching}"
                                                Style="{StaticResource sm-default}"
                                                Text="{DynamicResource Play}" />

                                            <Popup
                                                Width="{Binding ActualWidth, Source={x:Reference PlayButton}}"
                                                MinWidth="200"
                                                AllowsTransparency="True"
                                                Placement="Right"
                                                PlacementRectangle="0,-130,0,0"
                                                PlacementTarget="{Binding Source={x:Reference PlayButton}}"
                                                PopupAnimation="Fade">

                                                <Popup.Style>
                                                    <Style TargetType="Popup">
                                                        <Setter Property="IsOpen" Value="False" />
                                                        <Style.Triggers>
                                                            <!--  Триггер, который открывает Popup, если IsLoading=True и курсор на кнопке  -->
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <!--  Условие 1: IsLoading = True  -->
                                                                    <Condition Binding="{Binding InstanceModel.IsLaunching, UpdateSourceTrigger=PropertyChanged}" Value="True" />
                                                                    <Condition Binding="{Binding InstanceModel.IsDownloading, UpdateSourceTrigger=PropertyChanged}" Value="True" />
                                                                    <!--  Условие 2: Кнопка под курсором  -->
                                                                    <Condition Binding="{Binding IsMouseOver, Source={x:Reference PlayButton}}" Value="True" />
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="IsOpen" Value="True" />
                                                            </MultiDataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Popup.Style>

                                                <Border
                                                    Padding="8,8"
                                                    BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="5">

                                                    <Border.Background>
                                                        <SolidColorBrush Opacity="1" Color="{DynamicResource PrimaryColor}" />
                                                    </Border.Background>

                                                    <StackPanel>
                                                        <TextBlock
                                                            MaxWidth="200"
                                                            Margin="0,0,0,4"
                                                            HorizontalAlignment="Left"
                                                            FontSize="14"
                                                            TextWrapping="WrapWithOverflow">
                                                            <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="{DynamicResource ProcessColon}" />
                                                            <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" Text="{DynamicResource UpdatingFiles}" />
                                                        </TextBlock>
                                                        <TextBlock
                                                            Margin="0,0,0,4"
                                                            HorizontalAlignment="Left"
                                                            FontSize="14"
                                                            Foreground="White">
                                                            <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="{DynamicResource StageColon}" />
                                                            <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                                                                <Run.Text>
                                                                    <MultiBinding StringFormat="{}{0}/{1}">
                                                                        <Binding Path="DownloadingData.CurrentStage" />
                                                                        <Binding Path="DownloadingData.TotalStages" />
                                                                    </MultiBinding>
                                                                </Run.Text>
                                                            </Run>
                                                        </TextBlock>
                                                        <TextBlock
                                                            Margin="0,0,0,4"
                                                            HorizontalAlignment="Left"
                                                            FontSize="14"
                                                            Foreground="White">
                                                            <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="{DynamicResource FilesColon:}" />
                                                            <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                                                                <Run.Text>
                                                                    <MultiBinding StringFormat="{}{0}/{1}">
                                                                        <Binding Path="DownloadingData.FilesCounts" />
                                                                        <Binding Path="DownloadingData.TotalFiles" />
                                                                    </MultiBinding>
                                                                </Run.Text>
                                                            </Run>
                                                        </TextBlock>
                                                        <TextBlock
                                                            HorizontalAlignment="Left"
                                                            FontSize="14"
                                                            Foreground="White">
                                                            <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="{DynamicResource TotalDonwloadedColon}" />
                                                            <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" Text="{Binding DownloadingData.Percentages, Mode=OneWay, StringFormat='{}{0}%'}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>
                                            </Popup>
                                        </Grid>

                                        <controls:AdvancedButton
                                            x:Name="CloseButton"
                                            Command="{Binding CloseCommand}"
                                            FontSize="12"
                                            IconData="{StaticResource PDCancel}"
                                            Text="{DynamicResource Close}">
                                            <controls:AdvancedButton.Style>
                                                <Style BasedOn="{StaticResource sm-default}" TargetType="{x:Type controls:AdvancedButton}">
                                                    <Setter Property="Visibility" Value="Collapsed" />

                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding InstanceModel.IsLaunched}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding InstanceModel.IsLaunching}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </controls:AdvancedButton.Style>
                                        </controls:AdvancedButton>
                                    </Grid>
                                </core:If.True>
                                <core:If.False>
                                    <Grid>
                                        <core:If Condition="{Binding InstanceModel.DownloadCancelling}">
                                            <core:If.False>
                                                <Grid>
                                                    <controls:AdvancedButton
                                                        x:Name="DownloadButton"
                                                        Command="{Binding InstallCommand}"
                                                        FontSize="12"
                                                        IconData="{StaticResource PDDownload}"
                                                        IsLoading="{Binding InstanceModel.IsDownloading}"
                                                        LoadingText="{DynamicResource DownloadingTheInstance}"
                                                        Style="{StaticResource sm-default}"
                                                        Text="{DynamicResource Download}" />

                                                    <Popup
                                                        Width="{Binding ActualWidth, ElementName=DownloadButton}"
                                                        MinWidth="200"
                                                        AllowsTransparency="True"
                                                        Placement="Right"
                                                        PlacementRectangle="0,-120,0,0"
                                                        PlacementTarget="{Binding ElementName=DownloadButton}"
                                                        PopupAnimation="Fade">

                                                        <Popup.Style>
                                                            <Style TargetType="Popup">
                                                                <Setter Property="IsOpen" Value="False" />
                                                                <Style.Triggers>
                                                                    <!--  Триггер, который открывает Popup, если IsLoading=True и курсор на кнопке  -->
                                                                    <MultiDataTrigger>
                                                                        <MultiDataTrigger.Conditions>
                                                                            <!--  Условие 1: IsLoading = True  -->
                                                                            <Condition Binding="{Binding IsLoading, ElementName=DownloadButton}" Value="True" />
                                                                            <!--  Условие 2: Кнопка под курсором  -->
                                                                            <Condition Binding="{Binding IsMouseOver, ElementName=DownloadButton}" Value="True" />
                                                                        </MultiDataTrigger.Conditions>
                                                                        <Setter Property="IsOpen" Value="True" />
                                                                    </MultiDataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Popup.Style>

                                                        <Border
                                                            Padding="8,8"
                                                            BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="5">

                                                            <Border.Background>
                                                                <SolidColorBrush Opacity="1" Color="{DynamicResource PrimaryColor}" />
                                                            </Border.Background>

                                                            <StackPanel>
                                                                <TextBlock
                                                                    MaxWidth="200"
                                                                    Margin="0,0,0,4"
                                                                    HorizontalAlignment="Left"
                                                                    FontSize="14"
                                                                    TextWrapping="WrapWithOverflow">
                                                                    <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="Процесс:" />
                                                                    <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" Text="Установка сборки" />
                                                                </TextBlock>
                                                                <TextBlock
                                                                    Margin="0,0,0,4"
                                                                    HorizontalAlignment="Left"
                                                                    FontSize="14"
                                                                    Foreground="White">
                                                                    <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="Этап:" />
                                                                    <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                                                                        <Run.Text>
                                                                            <MultiBinding StringFormat="{}{0}/{1}">
                                                                                <Binding Path="DownloadingData.CurrentStage" />
                                                                                <Binding Path="DownloadingData.TotalStages" />
                                                                            </MultiBinding>
                                                                        </Run.Text>
                                                                    </Run>
                                                                </TextBlock>
                                                                <TextBlock
                                                                    Margin="0,0,0,4"
                                                                    HorizontalAlignment="Left"
                                                                    FontSize="14"
                                                                    Foreground="White">
                                                                    <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="Файлы:" />
                                                                    <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                                                                        <Run.Text>
                                                                            <MultiBinding StringFormat="{}{0}/{1}">
                                                                                <Binding Path="DownloadingData.FilesCounts" />
                                                                                <Binding Path="DownloadingData.TotalFiles" />
                                                                            </MultiBinding>
                                                                        </Run.Text>
                                                                    </Run>
                                                                </TextBlock>
                                                                <TextBlock
                                                                    HorizontalAlignment="Left"
                                                                    FontSize="14"
                                                                    Foreground="White">
                                                                    <Run Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}" Text="Итого скачено:" />
                                                                    <Run Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}" Text="{Binding DownloadingData.Percentages, Mode=OneWay, StringFormat='{}{0}%'}" />
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </Border>
                                                    </Popup>
                                                </Grid>
                                            </core:If.False>
                                            <core:If.True>
                                                <controls:AdvancedButton
                                                    x:Name="Cancel"
                                                    FontSize="12"
                                                    IsLoading="{Binding InstanceModel.DownloadCancelling}"
                                                    LoadingText="{DynamicResource DownloadCanceling}"
                                                    Style="{StaticResource sm-default}"
                                                    Text="{DynamicResource Download}" />
                                            </core:If.True>
                                        </core:If>
                                    </Grid>
                                </core:If.False>
                            </core:If>

                            <Border
                                Grid.Column="1"
                                Width="32"
                                Height="32"
                                Margin="8,0,0,0"
                                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                BorderThickness="1"
                                CornerRadius="5"
                                RenderTransformOrigin="0.5 0.5">

                                <Border.Background>
                                    <SolidColorBrush Opacity="0" Color="{DynamicResource ActivityColor}" />
                                </Border.Background>

                                <controls:DropdownMenu
                                    x:Name="PART_DropDownMenu"
                                    Background="{DynamicResource PrimarySolidColorBrush}"
                                    BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                    BorderThickness="1"
                                    Foreground="{DynamicResource DefaultButtonForegroundColorBrush}"
                                    PopupPlacement="Bottom"
                                    PopupVerticalOffset="5">
                                    <StackPanel>

                                        <core:If Condition="{Binding InstanceModel.IsDownloading}">
                                            <core:If.True>

                                                <!--  Отмена скачивания  -->
                                                <controls:AdvancedButton
                                                    x:Name="CancelDownloadButton"
                                                    Click="CancelDownloadButton_Click"
                                                    IconData="{DynamicResource PDCancel}"
                                                    Template="{StaticResource DropDownButton}"
                                                    Text="{DynamicResource CancelDownload}" />

                                            </core:If.True>
                                        </core:If>
                                        <core:If Condition="{Binding InstanceModel.IsLocal}">
                                            <core:If.False>

                                                <!--  Посетить сайт  -->
                                                <controls:AdvancedButton
                                                    x:Name="VisitWebsiteButton"
                                                    Click="VisitWebsiteButton_Click"
                                                    Template="{StaticResource DropDownButton}" />

                                            </core:If.False>
                                        </core:If>

                                        <core:If Condition="{Binding InstanceModel.InLibrary}">
                                            <core:If.True>
                                                <StackPanel>

                                                    <!--  Открыть папку  -->
                                                    <controls:AdvancedButton
                                                        x:Name="OpenFolderButton"
                                                        Click="OpenFolderButton_Click"
                                                        IconData="{DynamicResource PDFolder}"
                                                        Template="{StaticResource DropDownButton}"
                                                        Text="{DynamicResource OpenFolder}" />

                                                    <!--  Экспорт  -->
                                                    <controls:AdvancedButton
                                                        x:Name="ExportButton"
                                                        Click="ExportButton_Click"
                                                        IconData="{DynamicResource PDExport}"
                                                        Template="{StaticResource DropDownButton}"
                                                        Text="{DynamicResource Export}" />

                                                    <core:If Condition="{Binding InstanceModel.IsInstalled}">
                                                        <core:If.True>

                                                            <!--  Удалить  -->
                                                            <controls:AdvancedButton
                                                                x:Name="DeleteButton"
                                                                Click="DeleteButton_Click"
                                                                IconData="{DynamicResource PDDelete}"
                                                                Template="{StaticResource DropDownButton}"
                                                                Text="{DynamicResource DeleteInstance}" />

                                                        </core:If.True>
                                                        <core:If.False>

                                                            <!--  Удалить из библиотеки  -->
                                                            <controls:AdvancedButton
                                                                x:Name="DeleteFromLibraryButton"
                                                                Click="DeleteFromLibraryButton_Click"
                                                                IconData="{DynamicResource PDDelete}"
                                                                Template="{StaticResource DropDownButton}"
                                                                Text="{DynamicResource RemoveFromLibrary}" />

                                                        </core:If.False>
                                                    </core:If>
                                                </StackPanel>
                                            </core:If.True>
                                            <core:If.False>

                                                <!--  Добавить в библиотеку  -->
                                                <controls:AdvancedButton
                                                    x:Name="AddToLibraryButton"
                                                    Click="AddToLibraryButton_Click"
                                                    IconData="{DynamicResource PDAddToLibrary}"
                                                    Template="{StaticResource DropDownButton}"
                                                    Text="{DynamicResource AddToLibrary}" />

                                            </core:If.False>
                                        </core:If>
                                    </StackPanel>
                                </controls:DropdownMenu>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <!--  Tabs  -->
                <ItemsControl
                    Grid.Row="3"
                    Margin="16,32,0,0"
                    AlternationCount="2"
                    ItemsSource="{Binding Items}"
                    KeyboardNavigation.IsTabStop="False" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
