                        Width="38"
                        Height="38"
                        Margin="0,0,8,0"
                        Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">

                                <Grid Width="38" Height="38">

                                    <!--  Avatar  -->
                                    <Border
                                        x:Name="AvatarBorder"
