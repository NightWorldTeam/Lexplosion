<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.MainMenu.AdServersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Lexplosion.WPF.NewInterface.Controls"
    xmlns:converters="clr-namespace:Lexplosion.WPF.NewInterface.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.MainContent.MainMenu"
    xmlns:mainmenu="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.ViewModels.MainContent.MainMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:objects="clr-namespace:Lexplosion.Logic.Objects;assembly=Lexplosion.Core"
    d:DataContext="{d:DesignInstance Type=mainmenu:AdServersViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">


    <UserControl.Resources>
        <DataTemplate DataType="{x:Type objects:MinecraftServerInstance}">
            <Button
                Margin="0,0,16,0"
                HorizontalAlignment="Stretch"
                Background="Transparent"
                Command="{Binding DataContext.OpenServerPageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CommandParameter="{Binding}">
                <Button.Template>
                    <ControlTemplate>
                        <Grid Margin="0,0,0,8">

                            <Border
                                MaxWidth="650"
                                MaxHeight="200"
                                HorizontalAlignment="Stretch"
                                Background="{DynamicResource PrimarySolidColorBrush}"
                                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                BorderThickness="1"
                                CornerRadius="5" />


                            <Grid
                                MaxWidth="650"
                                MaxHeight="200"
                                HorizontalAlignment="Stretch"
                                Background="Transparent">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                    <RowDefinition Height="60" />
                                </Grid.RowDefinitions>

                                <Border
                                    Grid.RowSpan="2"
                                    Height="60"
                                    VerticalAlignment="Top"
                                    Background="{Binding BgUrl, Converter={converters:ImageSourceNullValidateConverter}}"
                                    CornerRadius="5,5,0,0">

                                    <TextBlock
                                        Margin="8"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource PrimarySolidColorBrush}"
                                        Opacity="0.3"
                                        Text="{DynamicResource moreDetails}" />
                                </Border>

                                <!--  Content Border  -->
                                <Border
                                    x:Name="ContentBorder"
                                    Grid.Row="2"
                                    Padding="12,6,12,6"
                                    Background="{DynamicResource SepSolidColorBrush}"
                                    CornerRadius="0,0,5,5">
                                    <Grid ShowGridLines="False">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" MaxHeight="24" />
                                        </Grid.RowDefinitions>

                                        <TextBlock
                                            Width="515"
                                            Height="32"
                                            HorizontalAlignment="Left"
                                            FontSize="12"
                                            Foreground="{DynamicResource SecondaryForegroundSolidColorBrush}"
                                            Text="{Binding Description}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="WrapWithOverflow" />

                                        <StackPanel Grid.RowSpan="2" HorizontalAlignment="Right">

                                            <TextBlock
                                                Margin="0,0,0,4"
                                                HorizontalAlignment="Center"
                                                FontSize="13"
                                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                                                <TextBlock.Style>
                                                    <Style TargetType="{x:Type TextBlock}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding OnlineCount}" Value="-2">
                                                                <Setter Property="Text" Value="{DynamicResource loading}" />
                                                                <Setter Property="Opacity" Value="0.5" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding OnlineCount}" Value="-1">
                                                                <Setter Property="Text" Value="Offline" />
                                                                <Setter Property="Foreground" Value="Red" />
                                                                <Setter Property="Opacity" Value="1" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsOnline}" Value="True">
                                                                <Setter Property="Text" Value="{Binding OnlineCount, StringFormat='{}Online: {0}'}" />
                                                                <Setter Property="Opacity" Value="1" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <controls:AdvancedButton
                                                Height="26"
                                                Padding="6,4,12,4"
                                                FontSize="12"
                                                IconData="{StaticResource PDAddToLibrary}"
                                                Style="{StaticResource sm-default}"
                                                Text="{DynamicResource Add}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                            </Grid>


                            <!--  Main Tags  -->
                            <Grid
                                Grid.RowSpan="2"
                                Margin="0,32,0,0"
                                VerticalAlignment="Top"
                                Background="Transparent">
                                <Border
                                    Margin="12,0,0,0"
                                    Padding="12,6"
                                    HorizontalAlignment="Left"
                                    Background="{DynamicResource SeparateSolidColorBrush}"
                                    CornerRadius="5">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        FontWeight="Medium"
                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                        Text="{Binding Name}" />
                                </Border>
                            </Grid>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Border Padding="16,16,0,0">
            <ListBox ItemsSource="{Binding Model.Servers}" Style="{StaticResource TransparentListBox}" />
        </Border>
    </Grid>
</UserControl>
