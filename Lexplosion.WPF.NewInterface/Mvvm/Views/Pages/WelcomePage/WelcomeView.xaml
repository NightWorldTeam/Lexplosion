<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Mvvm.Views.Pages.WelcomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Mvvm.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  TODO: Translate. Сделать перевод данного окна взависимости от языка пользователя в системе  -->
    <Grid Loaded="Grid_Loaded">
        <StackPanel
            x:Name="WelcomePage"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent">

            <StackPanel x:Name="LogoName" Orientation="Horizontal">

                <Border
                    x:Name="Logo"
                    Width="64"
                    Height="64"
                    Margin="0,10,16,0"
                    VerticalAlignment="Center"
                    MouseDown="Logo_MouseDown"
                    Opacity="0">
                    <Border.Background>
                        <ImageBrush ImageSource="/Assets/images/icons/logo.ico" />
                    </Border.Background>
                </Border>
                <TextBlock
                    x:Name="Lexplosion"
                    FontSize="64"
                    FontWeight="Medium"
                    Foreground="#167FFC"
                    Opacity="0"
                    Text="Lexplosion" />
            </StackPanel>

            <TextBlock
                x:Name="WelcomeText"
                Margin="0,0,0,0"
                HorizontalAlignment="Right"
                FontSize="16"
                FontWeight="Medium"
                Foreground="#8f8f8f"
                Opacity="0"
                TextAlignment="Center"
                TextWrapping="Wrap">
                <Run Text="{DynamicResource WelcomeDescription}" />
                <Run
                    FontWeight="Medium"
                    Foreground="{DynamicResource NightWorldWelcomePageWordColor}"
                    Text="NightWorld" />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
