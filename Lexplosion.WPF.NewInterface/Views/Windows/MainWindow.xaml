                                            VerticalAlignment="Center"
                                            FontSize="13"
                                            FontWeight="Medium"
                                            Foreground="White"
                                            Text="Direct Messages" />
                                    </Border>

                                    <Polygon
                                        Grid.Row="1"
                                        HorizontalAlignment="Center"
                                        Fill="Black"
                                        Points="10,0 5,5, 0,0" />
                                </Grid>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                </Grid>
            </Border>

