                        Width="200"
                        Height="124"
                        Content="Some Button">
                        <Button.ToolTip>
                            <ToolTip
                                Background="Transparent"
                                BorderThickness="0"
                                Placement="Center"
                                PlacementRectangle="32,-22,0,0"
                                PlacementTarget="{Binding ElementName=MainPanel}">
