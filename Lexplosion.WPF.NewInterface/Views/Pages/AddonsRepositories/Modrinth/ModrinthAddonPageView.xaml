<UserControl
    x:Class="Lexplosion.WPF.NewInterface.Views.Pages.AddonsRepositories.ModrinthAddonPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extension="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Views.Pages.AddonsRepositories"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="clr-namespace:System;assembly=mscorlib"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{DynamicResource Primary}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Primary" Color="#16181C" />
        <SolidColorBrush x:Key="Secondary" Color="#26292F" />
        <SolidColorBrush x:Key="Foreground" Color="#B0BAC5" />
        <SolidColorBrush x:Key="ForegroundLighter" Color="#ECF9FB" />
        <SolidColorBrush x:Key="ButtonColor" Color="#434956" />
        <SolidColorBrush x:Key="ActiveButtonColor" Color="#616570" />
        <SolidColorBrush x:Key="BrandColor" Color="#1BD96A" />


        <!--  Icons  -->
        <s:String x:Key="PDModrinthHeart">M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z</s:String>
    </UserControl.Resources>

    <ScrollViewer Margin="0,40,0,0">
        <Grid Background="{DynamicResource Primary}" ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.37*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Panel  -->

            <Grid Margin="8,0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border
                    Margin="0,0,0,8"
                    Padding="0,8,0,8"
                    Background="{DynamicResource Secondary}"
                    CornerRadius="5">
                    <Grid Margin="16,0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Border
                            Width="90"
                            Height="90"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="{DynamicResource ButtonColor}"
                            CornerRadius="5" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,0,0,8"
                            FontSize="18"
                            FontWeight="Medium"
                            Foreground="{DynamicResource ForegroundLighter}"
                            Text="Concurrent Chunk Management Engine (Fabric) "
                            TextWrapping="WrapWithOverflow" />

                        <TextBlock
                            Grid.Row="2"
                            Margin="0,0,0,8"
                            FontSize="14"
                            Foreground="{DynamicResource Foreground}"
                            Text="Lightweight and modular API providing common hooks and intercompatibility measures utilized by mods using the Fabric toolchain."
                            TextWrapping="WrapWithOverflow" />


                        <!--  First Three Categories  -->
                        <WrapPanel Grid.Row="3" Margin="0,0,0,8">
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                FontWeight="Medium"
                                Foreground="{DynamicResource Foreground}"
                                Text="Client or server" />
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Foreground="{DynamicResource Foreground}"
                                Text="Adventure" />
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Foreground="{DynamicResource Foreground}"
                                Text="Game Mechanics" />

                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Foreground="{DynamicResource Foreground}"
                                Text="Mobs" />
                            <TextBlock
                                Margin="0,0,8,0"
                                FontSize="14"
                                Foreground="{DynamicResource Foreground}"
                                Text="World Generation" />
                        </WrapPanel>

                        <!--  Additional Information (Downloads, followers, created ...)  -->
                        <Border
                            Grid.Row="4"
                            Padding="0,8,0,8"
                            BorderBrush="{DynamicResource ButtonColor}"
                            BorderThickness="0,1,0,0">
                            <StackPanel Grid.Row="3">
                                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                    <Viewbox Height="16" Margin="0,0,8,0">
                                        <Path
                                            Data="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                                            Stroke="{DynamicResource Foreground}"
                                            StrokeThickness="2" />
                                    </Viewbox>

                                    <TextBlock>
                                        <Run
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="{DynamicResource ForegroundLighter}"
                                            Text="7.12M" />
                                        <Run
                                            FontSize="14"
                                            Foreground="{DynamicResource Foreground}"
                                            Text="downloads" />
                                    </TextBlock>
                                </StackPanel>
                                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                    <Viewbox Height="16" Margin="0,0,8,0">
                                        <Path
                                            extension:Path.StringKeyData="ModrinthHeart"
                                            Data="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                                            Stroke="{DynamicResource Foreground}"
                                            StrokeThickness="2" />
                                    </Viewbox>

                                    <TextBlock>
                                        <Run
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Foreground="{DynamicResource ForegroundLighter}"
                                            Text="6,177" />
                                        <Run
                                            FontSize="14"
                                            Foreground="{DynamicResource Foreground}"
                                            Text="followers" />
                                    </TextBlock>
                                </StackPanel>

                                <!--  Created ...  -->
                                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                    <Viewbox Height="16" Margin="0,0,8,0">
                                        <Path
                                            extension:Path.StringKeyData="ModrinthHeart"
                                            Data="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2Z"
                                            Stroke="{DynamicResource Foreground}"
                                            StrokeThickness="2" />
                                    </Viewbox>

                                    <TextBlock
                                        FontSize="14"
                                        Foreground="{DynamicResource Foreground}"
                                        Text="Created 3 years ago" />
                                </StackPanel>


                                <!--  Created ...  -->
                                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                    <Viewbox Height="16" Margin="0,0,8,0">
                                        <Path
                                            extension:Path.StringKeyData="ModrinthHeart"
                                            Data="M1 4v6h6M23 20v-6h-6 M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4-4.64 4.36A9 9 0 0 1 3.51 15"
                                            Stroke="{DynamicResource Foreground}"
                                            StrokeThickness="2" />
                                    </Viewbox>

                                    <TextBlock
                                        FontSize="14"
                                        Foreground="{DynamicResource Foreground}"
                                        Text="Updated 2 days ago " />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!--  External Resources & Project Members  -->
                <Border
                    Grid.Row="1"
                    Padding="0,8"
                    Background="{DynamicResource Secondary}"
                    CornerRadius="5">
                    <Grid Margin="16,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  External Links  -->
                        <Border
                            Margin="0,0,0,16"
                            Padding="0,16"
                            BorderBrush="{DynamicResource ButtonColor}"
                            BorderThickness="0,0,0,2">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Header  -->
                                <TextBlock
                                    Margin="0,0,0,4"
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource ForegroundLighter}"
                                    Text="External resources" />

                                <!--  External Links  -->
                                <WrapPanel Grid.Row="1">
                                    <!--  Issues  -->
                                    <StackPanel Margin="0,0,8,0" Orientation="Horizontal">
                                        <Viewbox Height="16" Margin="0,0,4,0">
                                            <Path
                                                Data="M10.2908 3.86118L1.82075 18.0012C1.64612 18.3036 1.55372 18.6465 1.55274 18.9957C1.55176 19.3449 1.64224 19.6883 1.81518 19.9917C1.98812 20.2951 2.23748 20.5479 2.53846 20.725C2.83944 20.9021 3.18155 20.9973 3.53075 21.0012H20.4708C20.82 20.9973 21.1621 20.9021 21.463 20.725C21.764 20.5479 22.0134 20.2951 22.1863 19.9917C22.3593 19.6883 22.4497 19.3449 22.4488 18.9957C22.4478 18.6465 22.3554 18.3036 22.1808 18.0012L13.7108 3.86118C13.5325 3.56729 13.2815 3.3243 12.9819 3.15567C12.6824 2.98703 12.3445 2.89844 12.0008 2.89844C11.657 2.89844 11.3191 2.98703 11.0196 3.15567C10.72 3.3243 10.469 3.56729 10.2908 3.86118Z M12 9V13 M12 17H12.01"
                                                Stroke="{DynamicResource Foreground}"
                                                StrokeThickness="2" />
                                        </Viewbox>

                                        <TextBlock
                                            FontSize="16"
                                            Foreground="{DynamicResource Foreground}"
                                            Text="Issues"
                                            TextDecorations="Underline" />
                                    </StackPanel>

                                    <!--  Source  -->
                                    <StackPanel Margin="0,0,8,0" Orientation="Horizontal">
                                        <Viewbox Height="16" Margin="0,0,4,0">
                                            <Path
                                                Data="m10 20 4-16m4 4 4 4-4 4M6 16l-4-4 4-4"
                                                Stroke="{DynamicResource Foreground}"
                                                StrokeThickness="2" />
                                        </Viewbox>

                                        <TextBlock
                                            FontSize="16"
                                            Foreground="{DynamicResource Foreground}"
                                            Text="Source"
                                            TextDecorations="Underline" />
                                    </StackPanel>


                                    <!--  Wiki  -->
                                    <StackPanel Margin="0,0,8,0" Orientation="Horizontal">
                                        <Viewbox Height="16" Margin="0,0,4,0">
                                            <Path
                                                Data="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2zM22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"
                                                Stroke="{DynamicResource Foreground}"
                                                StrokeThickness="2" />
                                        </Viewbox>

                                        <TextBlock
                                            FontSize="16"
                                            Foreground="{DynamicResource Foreground}"
                                            Text="Wiki"
                                            TextDecorations="Underline" />
                                    </StackPanel>

                                    <!--  Discord  -->
                                    <StackPanel Margin="0,0,8,0" Orientation="Horizontal">
                                        <Viewbox Height="13" Margin="0,0,4,0">
                                            <Path
                                                Data="M60.105 4.898A58.55 58.55 0 0 0 45.653.415a.22.22 0 0 0-.233.11 40.784 40.784 0 0 0-1.8 3.697c-5.456-.817-10.886-.817-16.23 0-.485-1.164-1.201-2.587-1.828-3.697a.228.228 0 0 0-.233-.11 58.386 58.386 0 0 0-14.451 4.483.207.207 0 0 0-.095.082C1.578 18.73-.944 32.144.293 45.39a.244.244 0 0 0 .093.167c6.073 4.46 11.955 7.167 17.729 8.962a.23.23 0 0 0 .249-.082 42.08 42.08 0 0 0 3.627-5.9.225.225 0 0 0-.123-.312 38.772 38.772 0 0 1-5.539-2.64.228.228 0 0 1-.022-.378c.372-.279.744-.569 1.1-.862a.22.22 0 0 1 .23-.03c11.619 5.304 24.198 5.304 35.68 0a.219.219 0 0 1 .233.027c.356.293.728.586 1.103.865a.228.228 0 0 1-.02.378 36.384 36.384 0 0 1-5.54 2.637.227.227 0 0 0-.121.315 47.249 47.249 0 0 0 3.624 5.897.225.225 0 0 0 .249.084c5.801-1.794 11.684-4.502 17.757-8.961a.228.228 0 0 0 .092-.164c1.48-15.315-2.48-28.618-10.497-40.412a.18.18 0 0 0-.093-.084Zm-36.38 32.427c-3.497 0-6.38-3.211-6.38-7.156 0-3.944 2.827-7.156 6.38-7.156 3.583 0 6.438 3.24 6.382 7.156 0 3.945-2.827 7.156-6.381 7.156Zm23.593 0c-3.498 0-6.38-3.211-6.38-7.156 0-3.944 2.826-7.156 6.38-7.156 3.582 0 6.437 3.24 6.38 7.156 0 3.945-2.798 7.156-6.38 7.156Z"
                                                Fill="{DynamicResource Foreground}"
                                                StrokeThickness="2" />
                                        </Viewbox>

                                        <TextBlock
                                            FontSize="16"
                                            Foreground="{DynamicResource Foreground}"
                                            Text="Discord"
                                            TextDecorations="Underline" />
                                    </StackPanel>
                                </WrapPanel>
                            </Grid>
                        </Border>

                        <!--  Project Members  -->
                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,16"
                            Padding="0,16"
                            BorderBrush="{DynamicResource ButtonColor}"
                            BorderThickness="0,0,0,2">
                            <Grid>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Header  -->
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource ForegroundLighter}"
                                    Text="Project members" />

                                <!--  Members List  -->
                                <ItemsControl />

                                <!--  Members Pattern  -->
                                <Border Grid.Row="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Width="40"
                                            Height="40"
                                            Margin="0,0,8,0"
                                            Background="{DynamicResource BrandColor}"
                                            CornerRadius="100" />
                                        <StackPanel Grid.Column="1">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="{DynamicResource Foreground}"
                                                Text="Cobblemon" />
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="Medium"
                                                Foreground="{DynamicResource Foreground}"
                                                Text="Owner" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!--  Technical information  -->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Header  -->
                            <TextBlock
                                Margin="0,0,0,4"
                                FontSize="18"
                                FontWeight="Medium"
                                Foreground="{DynamicResource ForegroundLighter}"
                                Text="Technical information" />

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  License  -->
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="License" />

                                <TextBlock
                                    Grid.Column="1"
                                    FontSize="14"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="MPL-2.0" />

                                <!--  Client side  -->
                                <TextBlock
                                    Grid.Row="1"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="Client side" />

                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    FontSize="14"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="Required" />

                                <!--  Server side  -->
                                <TextBlock
                                    Grid.Row="2"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="Server side" />

                                <TextBlock
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    FontSize="14"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="Required" />

                                <!--  Project Id  -->
                                <TextBlock
                                    Grid.Row="3"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="Project ID" />

                                <TextBlock
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    FontSize="14"
                                    Foreground="{DynamicResource Foreground}"
                                    Text="MdwFAVRL" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!--  Body  -->

            <Grid Grid.Column="1" VerticalAlignment="Stretch">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Tab Item  -->
                <Border
                    Height="64"
                    Margin="0,0,0,16"
                    Padding="16,8"
                    HorizontalAlignment="Stretch"
                    Background="{DynamicResource Secondary}"
                    CornerRadius="5">
                    <WrapPanel VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,16,0"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource Foreground}"
                            Text="Description">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline">
                                    <TextDecoration.Pen>
                                        <Pen Brush="{DynamicResource BrandColor}" Thickness="3" />
                                    </TextDecoration.Pen>
                                </TextDecoration>
                            </TextBlock.TextDecorations>
                        </TextBlock>

                        <TextBlock
                            Margin="0,0,16,0"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource Foreground}"
                            Text="Changelog" />


                        <TextBlock
                            Margin="0,0,16,0"
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource Foreground}"
                            Text="Versions" />
                    </WrapPanel>
                </Border>

                <!--  Page Content  -->
                <Border
                    Grid.Row="1"
                    Padding="32,16"
                    Background="{DynamicResource Secondary}"
                    CornerRadius="5">

                    <StackPanel>

                        <Border
                            Margin="0,0,0,16"
                            Padding="0,0,0,8"
                            BorderBrush="{DynamicResource ButtonColor}"
                            BorderThickness="0,0,0,1">
                            <TextBlock
                                FontSize="24"
                                FontWeight="Medium"
                                Foreground="{DynamicResource ForegroundLighter}"
                                Text="Concurrent Chunk Management Engine (Fabric)"
                                TextWrapping="WrapWithOverflow" />
                        </Border>

                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="16"
                            Foreground="{DynamicResource Foreground}"
                            Text="Essential hooks for modding with Fabric." />

                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            Foreground="{DynamicResource Foreground}"
                            Text="Fabric API is the library for essential hooks and interoperability mechanisms for Fabric mods. Examples include:"
                            TextWrapping="WrapWithOverflow" />


                        <!--  list container  -->
                        <StackPanel Margin="0,0,0,8">
                            <TextBlock
                                Margin="32,0,0,8"
                                FontSize="16"
                                Foreground="{DynamicResource Foreground}"
                                Text="•  Exposing functionality that is useful but difficult to access for many mods such as particles, biomes and dimensions"
                                TextWrapping="WrapWithOverflow" />

                            <TextBlock
                                Margin="32,0,0,8"
                                FontSize="16"
                                Foreground="{DynamicResource Foreground}"
                                Text="•  Adding events, hooks and APIs to improve interopability between mods."
                                TextWrapping="WrapWithOverflow" />

                            <TextBlock
                                Margin="32,0,0,8"
                                FontSize="16"
                                Foreground="{DynamicResource Foreground}"
                                Text="•  Essential features such as registry synchronization and adding information to crash reports."
                                TextWrapping="WrapWithOverflow" />

                            <TextBlock
                                Margin="32,0,0,8"
                                FontSize="16"
                                Foreground="{DynamicResource Foreground}"
                                Text="•  An advanced rendering API designed for compatibility with optimization mods and graphics overhaul mods."
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>

                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="16"
                            Foreground="{DynamicResource Foreground}"
                            Text="Also check out Fabric Loader, the (mostly) version-independent mod loader that powers Fabric. Fabric API is a mod like any other Fabric mod which requires Fabric Loader to be installed."
                            TextWrapping="WrapWithOverflow" />
                        <TextBlock
                            Margin="0,0,0,16"
                            FontSize="16"
                            Foreground="{DynamicResource Foreground}"
                            Text="For support and discussion for both developers and users, visit the Fabric Discord server." />


                        <Border
                            Margin="0,0,0,16"
                            Padding="0,0,0,8"
                            BorderBrush="{DynamicResource ButtonColor}"
                            BorderThickness="0,0,0,1">
                            <TextBlock
                                FontSize="20"
                                FontWeight="Medium"
                                Foreground="{DynamicResource ForegroundLighter}"
                                Text="Using Fabric API to play with mods"
                                TextWrapping="WrapWithOverflow" />
                        </Border>

                        <TextBlock
                            FontSize="16"
                            Foreground="{DynamicResource Foreground}"
                            Text="Make sure you have install fabric loader first. More information about installing Fabric Loader can be found here."
                            TextWrapping="WrapWithOverflow" />

                        <TextBlock
                            FontSize="16"
                            Foreground="{DynamicResource Foreground}"
                            Text="The downloaded jar file should be placed in your mods folder."
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
