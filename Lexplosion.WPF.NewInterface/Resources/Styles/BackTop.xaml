<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.Controls">

    <Style
        x:Key="sm-backtop-default"
        BasedOn="{StaticResource {x:Type local:BackTop}}"
        TargetType="{x:Type local:BackTop}">
        <Setter Property="CornerRadius" Value="100" />
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="40" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource BrandColorForegroundSolidColorBrush}" />
        <Setter Property="Background" Value="{DynamicResource ActivitySolidColorBrush}" />
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="Cursor" Value="Hand" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BackTop}">
                    <Border
                        Padding="5"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Viewbox Height="20">
                            <Path
                                Data="M22.5 40V13.7L10.1 26.1 8 24 24 8l16 16-2.1 2.1-12.4-12.4V40Z"
                                Fill="{TemplateBinding Foreground}"
                                Stretch="Fill" />
                        </Viewbox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>