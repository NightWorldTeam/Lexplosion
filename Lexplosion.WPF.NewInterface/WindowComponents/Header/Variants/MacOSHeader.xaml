<local:HeaderBase
    x:Class="Lexplosion.WPF.NewInterface.WindowComponents.Header.Variants.MacOSHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.WPF.NewInterface.Extensions"
    xmlns:local="clr-namespace:Lexplosion.WPF.NewInterface.WindowComponents.Header.Variants"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid
            x:Name="WindowHeaderPanelButtonsGrid"
            Margin="16,12"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            KeyboardNavigation.IsTabStop="False"
            ShowGridLines="False"
            Visibility="Visible">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>


            <!--  Close & Hide Buttons  -->

            <StackPanel
                x:Name="WindowHeaderPanelButtons"
                Orientation="Horizontal"
                RenderTransformOrigin="0.5, 0.5">


                <!--  Close Button  -->

                <Button
                    Width="15"
                    Height="15"
                    Margin="0,0,10,0"
                    Background="#FF0B00"
                    Click="Close"
                    Style="{StaticResource ColoredWindowsButton}" />


                <!--  Maximized Button  -->

                <Button
                    Width="15"
                    Height="15"
                    Margin="0,0,10,0"
                    Background="Orange"
                    Click="Maximized"
                    Style="{StaticResource ColoredWindowsButton}" />


                <!--  Minimaze Button  -->
                <Button
                    Width="15"
                    Height="15"
                    Margin="0,0,10,0"
                    Background="#009DFF"
                    Click="Minimazed"
                    Style="{StaticResource ColoredWindowsButton}" />
            </StackPanel>
        </Grid>

        <Grid
            x:Name="AddtionalFuncs"
            Margin="16,12"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.5, 0.5"
            Visibility="Visible">
            <!--  Change Panel Orintation  -->

            <Border
                Width="20"
                Height="20"
                Padding="2"
                Background="{DynamicResource SeparateSolidColorBrush}"
                CornerRadius="2"
                MouseDown="ChangeOrintation"
                ToolTip="Изменить положение меню"
                ToolTipService.BetweenShowDelay="0"
                ToolTipService.InitialShowDelay="0"
                ToolTipService.PlacementRectangle="7,40,0,0">
                <Viewbox Height="14">
                    <Path
                        extensions:PathExtensions.StringKeyData="IndentDecrease"
                        Fill="{DynamicResource ActivitySolidColorBrush}"
                        Stretch="Fill" />
                </Viewbox>
            </Border>
        </Grid>
    </Grid>
</local:HeaderBase>
