<Application
    x:Class="Lexplosion.UI.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <sys:Double x:Key="ScalingFactorValue">1</sys:Double>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/LanguagesRegister.xaml" />
                <ResourceDictionary Source="Resources/ResourcesRegister.xaml" />
                <ResourceDictionary Source="Controls/Controls.xaml" />
                <ResourceDictionary Source="DataTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>