<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Lexplosion.UI.WPF.Core.Converters"
    xmlns:core="clr-namespace:Lexplosion.UI.WPF.Core"
    xmlns:extensions="clr-namespace:Lexplosion.UI.WPF.Extensions"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.Controls">

    <Style x:Key="ButtonFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border
                        Margin="-7"
                        BorderBrush="Red"
                        BorderThickness="3"
                        CornerRadius="22"
                        Opacity="0.3"
                        SnapsToDevicePixels="true" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:AdvancedButton}">
        <Setter Property="FocusVisualStyle" Value="{StaticResource ButtonFocusVisual}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="MinHeight" Value="22" />
        <Setter Property="MinWidth" Value="22" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AdvancedButton}">
                    <Border
                        x:Name="border"
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        MinWidth="{TemplateBinding MinWidth}"
                        MinHeight="{TemplateBinding MinHeight}"
                        MaxWidth="{TemplateBinding MaxWidth}"
                        MaxHeight="{TemplateBinding MaxHeight}"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            Background="Transparent"
                            ShowGridLines="False">
                            <Grid x:Name="DefaultContent">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Icon  -->
                                <Border
                                    Padding="{TemplateBinding IconPadding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                    <Viewbox x:Name="PATH_Icon">
                                        <Path
                                            Fill="{TemplateBinding Foreground}"
                                            RenderTransformOrigin="0.5, 0.5"
                                            Stretch="Fill">
                                            <Path.RenderTransform>
                                                <ScaleTransform ScaleX="0.7" ScaleY="0.7" />
                                            </Path.RenderTransform>
                                        </Path>
                                    </Viewbox>
                                </Border>

                                <!--  TextBlock  -->
                                <Border
                                    Grid.Column="1"
                                    Padding="{TemplateBinding TextPadding}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                    <TextBlock
                                        x:Name="PATH_Text"
                                        FontSize="{TemplateBinding FontSize}"
                                        Foreground="{TemplateBinding Foreground}" />
                                </Border>

                                <!--  Button Content Property  -->
                                <ContentPresenter
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True" />
                            </Grid>

                            <Grid
                                x:Name="PART_LoadingContent"
                                HorizontalAlignment="Center"
                                Background="Transparent"
                                Visibility="Collapsed">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <local:CircleLoader
                                    Width="16"
                                    Height="16"
                                    VerticalAlignment="Center"
                                    CornerRadius="5"
                                    Foreground="{TemplateBinding Foreground}"
                                    IsActive="{TemplateBinding IsLoading}" />

                                <TextBlock
                                    Grid.Column="1"
                                    Margin="8,0,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="{TemplateBinding Foreground}"
                                    Text="{TemplateBinding LoadingText}" />
                            </Grid>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PATH_Text" Property="Opacity" Value="0.3" />
                            <Setter TargetName="PATH_Icon" Property="Opacity" Value="0.3" />
                            <Setter Property="Cursor" Value="No" />
                        </Trigger>
                        <Trigger Property="IsLoading" Value="True">
                            <Setter TargetName="PART_LoadingContent" Property="Visibility" Value="Visible" />
                            <Setter TargetName="DefaultContent" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>