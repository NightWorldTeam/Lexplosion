<UserControl
    x:Class="Lexplosion.UI.WPF.Mvvm.Views.Pages.Profile.ProfileInfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:converters="clr-namespace:Lexplosion.UI.WPF.Core.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Lexplosion.UI.WPF.Extensions"
    xmlns:lexplosion="clr-namespace:Lexplosion;assembly=Lexplosion.Core"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.Mvvm.Views.Pages.Profile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:profileModel="clr-namespace:Lexplosion.UI.WPF.Mvvm.Models.Profile"
    d:DataContext="{d:DesignInstance Type=profileModel:ProfileInfo}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type profileModel:ProfileSocialMedia}">
            <Border
                x:Name="Border"
                Width="34"
                Height="34"
                Margin="4,0,0,0"
                Padding="6"
                Background="{DynamicResource SecondarySolidColorBrush}"
                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Cursor="Hand"
                MouseDown="Border_MouseDown">
                <Border>
                    <Viewbox>
                        <Path
                            x:Name="Path"
                            extensions:PathExtensions.StringKeyData="{Binding LogoName}"
                            Fill="{DynamicResource SecondaryForegroundSolidColorBrush}"
                            Stretch="Fill" />
                    </Viewbox>
                </Border>
            </Border>

            <DataTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Path" Property="Fill" Value="{DynamicResource ActivitySolidColorBrush}" />
                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource PrimarySolidColorBrush}" />
                </Trigger>
            </DataTemplate.Triggers>

        </DataTemplate>
    </UserControl.Resources>

    <Border
        Background="{DynamicResource PrimarySolidColorBrush}"
        BorderBrush="{DynamicResource SeparateSolidColorBrush}"
        CornerRadius="5">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition
                    Height="0.4*"
                    MinHeight="140"
                    MaxHeight="200" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                MaxHeight="220"
                Background="DarkCyan"
                CornerRadius="10"
                Opacity="0.3" />

            <Border
                Grid.Row="1"
                Margin="0,-16,0,0"
                Background="{DynamicResource PrimarySolidColorBrush}"
                CornerRadius="5" />

            <Grid Grid.RowSpan="2" ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="0.5*"
                        MinHeight="150"
                        MaxHeight="225" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Grid
                    Width="86"
                    Height="86"
                    VerticalAlignment="Bottom">
                    <Border
                        Padding="2"
                        BorderThickness="3"
                        CornerRadius="1000">

                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Model.ProfileInfo.Status}" Value="{x:Static lexplosion:ActivityStatus.Online}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource OnlineSolidColorBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Model.ProfileInfo.Status}" Value="{x:Static lexplosion:ActivityStatus.Offline}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource OfflineSolidColorBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Model.ProfileInfo.Status}" Value="{x:Static lexplosion:ActivityStatus.InGame}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource InGameSolidColorBrush}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Model.ProfileInfo.Status}" Value="{x:Static lexplosion:ActivityStatus.NotDisturb}">
                                        <Setter Property="BorderBrush" Value="#00ffb5" />
                                        <!--<Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <RadialGradientBrush>
                                                        <GradientStop Offset="0" Color="#FF8800" />
                                                        <GradientStop Offset="0.35" Color="#FF6F00" />
                                                        <GradientStop Offset="0.56" Color="#FF1E00" />
                                                        <GradientStop Offset="0.74" Color="#FFA700" />
                                                        <GradientStop Offset="1" Color="#FF8000" />
                                                    </RadialGradientBrush>
                                                </Setter.Value>
                                            </Setter>-->
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Border CornerRadius="1000">
                            <Border.Background>
                                <ImageBrush ImageSource="/Assets/images/icons/hel2xhead.png" />
                            </Border.Background>
                        </Border>
                    </Border>

                    <Border
                        Width="24"
                        Height="24"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="{DynamicResource OnlineSolidColorBrush}"
                        BorderBrush="{DynamicResource PrimarySolidColorBrush}"
                        BorderThickness="4"
                        CornerRadius="1000" />
                </Grid>


                <StackPanel Grid.Row="1" HorizontalAlignment="Center">

                    <TextBlock
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        FontSize="30"
                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                        Text="{Binding Name, Mode=OneWay}" />

                    <Border
                        Margin="0,8,0,0"
                        HorizontalAlignment="Center"
                        Background="{Binding Title.BackgroundColor, Mode=OneWay, Converter={converters:UIntToSolidColorBrushConverter}}"
                        BorderBrush="{Binding Title.BorderColor, Mode=OneWay, Converter={converters:UIntToSolidColorBrushConverter}}"
                        BorderThickness="1"
                        CornerRadius="5">
                        <TextBlock
                            Padding="8,4"
                            HorizontalAlignment="Center"
                            Foreground="{Binding Title.Color, Mode=OneWay, Converter={converters:UIntToSolidColorBrushConverter}}"
                            Text="{Binding Title.Name, Mode=OneWay}" />
                    </Border>

                    <Border
                        Margin="0,0,0,0"
                        Padding="16"
                        HorizontalAlignment="Stretch">
                        <StackPanel>

                            <!--  Stats  -->
                            <Border
                                Padding="16,16"
                                Background="{DynamicResource SecondarySolidColorBrush}"
                                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                BorderThickness="1"
                                CornerRadius="5">

                                <Grid ShowGridLines="False">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Friends  -->
                                    <Border HorizontalAlignment="Right">

                                        <StackPanel>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="{DynamicResource StatsFontSize}"
                                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                Text="{Binding FriendsCount, Mode=OneWay}" />

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="{DynamicResource StatsFontSize}"
                                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                Text="Друзей" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Play time  -->
                                    <Border
                                        Grid.Column="1"
                                        Margin="{DynamicResource StatsHighlightPadding}"
                                        Padding="{DynamicResource StatsHighlightPadding}"
                                        BorderBrush="{DynamicResource ActivitySolidColorBrush}"
                                        BorderThickness="1,0">
                                        <StackPanel>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="{DynamicResource StatsFontSize}"
                                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}">
                                                <Run Text="{Binding HoursCount, Mode=OneWay}" />
                                                <Run Text="ч." />
                                            </TextBlock>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="{DynamicResource StatsFontSize}"
                                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                Text="Игровое время" />
                                        </StackPanel>
                                    </Border>

                                    <!--  Account age  -->
                                    <Border Grid.Column="2" HorizontalAlignment="Left">
                                        <StackPanel>

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="{DynamicResource StatsFontSize}"
                                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                Text="{Binding AccountAge, Mode=OneWay}" />

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="{DynamicResource StatsFontSize}"
                                                Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                                Text="Выслуга" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>

                            <!--  Description  -->
                            <Border
                                Margin="0,8,0,0"
                                Padding="20,16"
                                Background="{DynamicResource SecondarySolidColorBrush}"
                                BorderBrush="{DynamicResource SeparateSolidColorBrush}"
                                BorderThickness="1"
                                CornerRadius="5">

                                <Grid>

                                    <!--  Summary EMPTY  -->
                                    <!--  TODO: 1.0.3.0 Translate  -->
                                    <TextBlock
                                        FontSize="{DynamicResource StatsFontSize}"
                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                        Text="Когда-нибудь здесь будет интересный текст. Но это не точно."
                                        TextAlignment="Center"
                                        TextWrapping="WrapWithOverflow">
                                        <TextBlock.Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Summary.Length}" Value="0">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!--  Summary  -->
                                    <TextBlock
                                        FontSize="{DynamicResource StatsFontSize}"
                                        Foreground="{DynamicResource PrimaryForegroundSolidColorBrush}"
                                        Text="{Binding Summary, Mode=OneWay}"
                                        TextAlignment="Center"
                                        TextWrapping="WrapWithOverflow" />
                                </Grid>
                            </Border>

                            <ItemsControl
                                Margin="0,4,0,0"
                                HorizontalAlignment="Center"
                                ItemsSource="{Binding SocialMedia, Mode=OneWay}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel IsItemsHost="True" Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
