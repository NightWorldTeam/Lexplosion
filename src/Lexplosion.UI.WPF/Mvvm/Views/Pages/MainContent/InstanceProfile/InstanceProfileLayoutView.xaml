<UserControl
    x:Class="Lexplosion.UI.WPF.Mvvm.Views.Pages.MainContent.InstanceProfile.InstanceProfileLayoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:instanceprofile="clr-namespace:Lexplosion.UI.WPF.Mvvm.ViewModels.MainContent.InstanceProfile"
    xmlns:local="clr-namespace:Lexplosion.UI.WPF.Mvvm.Views.Pages.MainContent.InstanceProfile"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=instanceprofile:InstanceProfileLayoutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="{DynamicResource PageSolidColorBrush}" Loaded="Grid_Loaded">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.363*" MaxWidth="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ContentControl Content="{Binding LeftPanel}" KeyboardNavigation.IsTabStop="False" />

        <ContentControl
            Grid.Column="1"
            Content="{Binding Content}"
            KeyboardNavigation.IsTabStop="False"
            KeyboardNavigation.TabNavigation="None" />
    </Grid>
</UserControl>
